// Provider and model definitions

provider "llm.openai" "default" {
  api_key = var.openai_api_key
  default_params {
    temperature = 0.7
    max_tokens  = 2000
  }
}

provider "llm.anthropic" "default" {
  api_key = var.anthropic_api_key
  default_params {
    temperature = 0.5
    max_tokens  = 4000
  }
}

// OpenAI models
model "gpt4o_mini" {
  provider = provider.llm.openai.default
  id       = "gpt-4o-mini"
  params {
    temperature = 0.1
  }
}

model "gpt4o" {
  provider = provider.llm.openai.default
  id       = "gpt-4o"
  params {
    temperature = 0.7
  }
}

// Anthropic models
model "claude_sonnet" {
  provider = provider.llm.anthropic.default
  id       = "claude-sonnet-4-5-20250929"
  params {
    temperature = 0.3
    max_tokens  = 4000
  }
}
